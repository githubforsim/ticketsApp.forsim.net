
RewriteEngine On
#RewriteBase /ticketsApp

# Ne pas réécrire les requêtes vers les fichiers statiques (CSS, JS, images, etc.)
RewriteCond %{REQUEST_URI} ^/ticketsApp/app/public/ [NC,OR]
RewriteCond %{REQUEST_URI} ^/ticketsApp/public/ [NC,OR]
RewriteCond %{REQUEST_URI} \.(css|js|png|jpg|jpeg|gif|ico|svg|woff|woff2|ttf|eot)$ [NC]
RewriteRule ^ - [L]

# Réécrire toutes les requêtes sauf si le fichier ou dossier existe
# Rediriger toutes les requêtes GET vers index.php sauf si le fichier ou dossier existe
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^(.*)$ index.php [QSA,L]
# Empêcher l'accès direct au dossier config
php_flag display_errors On
php_value error_reporting 32767
<Files "config">
    Order Allow,Deny
    Deny from all
</Files>

# Empêcher l'accès aux fichiers .php dans le dossier config via URL directe
RewriteEngine On
RewriteRule ^config/.*\.php$ - [F,L]

